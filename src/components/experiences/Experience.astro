---
const { empresa, color, fecha, puesto, descripcion } = Astro.props;
---

<div class="mb-10 mt-10 ms-4 grid md:grid-cols-2 grid-cols-1">
  <div>
    <div
      class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5"
      style={`background: ${color};`}
    >
    </div>
    <h3 class="text-2xl font-bold" style={`color: ${color};`}>
      {empresa}
    </h3>
    <h3
      class="text-lg font-semibold dark:text-gray-600 opacity-80 dark:opacity-100"
    >
      {puesto}
    </h3>
    <time
      class="mb-1 text-sm font-semibold leading-none dark:text-gray-600 opacity-80 dark:opacity-100"
      >{fecha.inicio + ` - ` + fecha.fin}</time
    >
  </div>
  <div>
    <p
      class="mb-4 text-base font-normal dark:text-gray-300 opacity-80 dark:opacity-100"
    >
      {descripcion}
    </p>
  </div>
  <div class="space-y-24"></div>
</div>
