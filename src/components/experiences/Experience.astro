---
const { empresa, color, fecha, puesto, descripcion } = Astro.props;
---

<div class="mb-10 mt-10 ms-4 grid md:grid-cols-2 grid-cols-1">
  <div>
    <div
      class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <h3 class="text-2xl font-bold" style={`color: ${color};`}>
      {empresa}
    </h3>
    <h3
      class="text-lg font-semibold dark:text-gray-600 opacity-80 dark:opacity-100"
    >
      {puesto}
    </h3>
    <time
      class="mb-1 text-sm font-semibold leading-none text-gray-100 dark:text-gray-500"
      >{fecha.inicio + ` - ` + fecha.fin}</time
    >
  </div>
  <div>
    <p class="mb-4 text-base font-normal content-theme">
      {descripcion}
    </p>
  </div>
  <div class="space-y-24"></div>
</div>
